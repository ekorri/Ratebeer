<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<div>
  <% if @user.ratings.empty? %>
    This user has made no ratings
  <% else %>
	 Has made <%= pluralize(@user.ratings.count, "rating") %>, average <%= @user.average_rating %>
  <% end %>
</div>

<h2>ratings</h2>

<ul>
	<% @user.ratings.each do |rating| %>
   		<li> 
   			<%= rating %>
        	<% if @user == current_user %>
            	<%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
        	<% end %> 
   		</li>
 	<% end %>
</ul>

<div>
  <% if @user.beer_clubs.empty? %>
    Is not a member of a club
  <% else %>
    Is a member of
    <ul>
      <% @user.beer_clubs.each do | beer_club| %>
      <li> <%= beer_club.name %> </li>
      <% end %>
    </ul>
  <% end %>
</div>

<% if current_user %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Destroy', current_user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', users_path %>
